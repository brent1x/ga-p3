body{
  font-family: Helvetica;
  background-color: crimson; 
  margin: 0;
  padding: 0;
}
h2{
  font-size: 38px;
}
h3{
  font-size: 4em;
}
h4{
  font-size: 2em;
  font-weight: 200;
}
h3 > small{
  color: white;
  font-size: 24px;
  font-weight: 200;
}
#crimson{
  background-color: crimson;
  height: 100%;
  width: 100%;
}
.smaller{
  font-weight: 200;
}
label{
  display: none;
}
::-webkit-input-placeholder {
   color: white;
}

:-moz-placeholder { /* Firefox 18- */
   color: white;  
}

::-moz-placeholder {  /* Firefox 19+ */
   color: white;  
}

:-ms-input-placeholder {  
   color: white;  
}
#food-background{
  background: url("<%= asset_path("food3.jpg")%>") 50% 50% no-repeat fixed;
  background-size: cover;
    min-height: 100%;
  min-width: 1024px;
  
  /* Set up proportionate scaling */
  width: 100%;
  height: auto;
  
  /* Set up positioning */
  position: fixed;
  top: 0;
  left: 0;
}
#food-background2{
  background: url("<%= asset_path("food5.jpg")%>") 50% 50% no-repeat fixed;
  background-size: cover;
    /* Set rules to fill background */
  min-height: 100%;
  min-width: 1024px;
  
  /* Set up proportionate scaling */
  width: 100%;
  height: auto;
  
  /* Set up positioning */
  position: fixed;
  top: 0;
  left: 0;
}
.overflow-hidden{
  overflow: hidden;
}
.logo-image{
  height: 300px;
  margin-top: 100px;
  margin-bottom: 50%;
}
.logo-image-sm{
  height: 200px;
  margin-top: 80px;
  margin-bottom: 40px; 
}
#user_email, #user_password, #user_first_name, #user_last_name, #user_phone_number, .btn{
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  background-color: rgba(0,0,0,.37);
  border: 2px solid;
  border-color: rgba(255,255,255,.85);
  height:80px;
  color: white;
  text-align: center;
  font-size: 32px;
  margin-bottom: 40px;
  font-weight: 300;
}

.input-class{
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  height: 70px;
  background-color: rgba(0,0,0,.0);
  border: 2px solid;
  border-color: white;
  margin-bottom: 40px;
  font-size:2em;
}
a {
  color:white;
}
a:hover{
 color: gray;
 text-decoration: none;
}

.btn{
  width: 50%;
  margin-left: 0px !important;
}
.signup-button{
  padding-top: 15px;
}


.navbar{
  position: fixed;
  background-color: rgba(0,0,0,0);
  border: none;
}
.navbar-defult{
  border-color: rgba(0,0,0,0);
}
.collapsed:hover{
  background-color: red;
}
.navbar-toggle {
  border: none;
}
.navbar-default .navbar-toggle:focus, .navbar-default .navbar-toggle:hover{
  background-color: rgba(0,0,0,0);
}
.icon-bar{
  background-color: white !important;
}
.text-white{
  color: white;
}
.border-line{
  border-bottom: 2px solid;
  padding-bottom: 30px;
  margin-bottom: 20px;
}
.selected-item{
  background-color: white;
  color: crimson;
  width: 45%;
  height: 50px;
  text-align: center;
  padding-top: 14px;
  font-size: 22px;
  font-weight: 200;
}
.not-selected-item{
  width: 45%;
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: center;
  font-size: 2.5em;
  background-color: rgba(0,0,0,0);
  border: 2px white solid;
  font-weight: 200;
}
.not-selected-item:hover{
  background-color: white;
  border: crimson;
  color: crimson;

}
.end-line{
  border-top: 2px solid white;
  margin-top: 30px;
  margin-bottom: 30px;
}
.expand-width{
  width: 100%;
}
.delete-width{

  display: inline-block;
  width: 60%;
  margin-top: 7%
}
.party-padding{
  padding-top: 25px;
}
.row{
  margin-top: 3%;
  margin-left: 0;
  margin-right: 0;
}
.time-inputs{
  width: 20%;
}
.new-nav{
  width:100%;
  height:200px;
  background-color: white;
  position: fixed;
  bottom: 0;
  left:0;
  padding-top: 30px;
}
.nav-row{
  margin-top: 0;
}

