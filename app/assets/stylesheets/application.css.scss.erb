}
.settings{
  background: url("<%= asset_path("settings-01.png")%>") 50% 50% no-repeat;
}
.info{
  background: url("<%= asset_path("info-01.png")%>") 50% 50% no-repeat;
}
.profile-img{
  height:200px;
  width: 200px;
  border-radius: 100px;
  margin: 0 auto;
}
.colin{
  background: url("<%= asset_path("colin.jpg")%>") 50% 50% no-repeat;
}
.brent{
  background: url("<%= asset_path("brent.jpg")%>") 50% 50% no-repeat; 
}
.george{
